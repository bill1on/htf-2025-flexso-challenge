<core:FragmentDefinition xmlns:smartfield="sap.ui.comp.smartfield"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core">
    <Dialog id="_IDGenDialog" title="Order" draggable="true">
        <content>
            <VBox>
                <Table id="idOrderTable" items="{/material}" mode="SingleSelectMaster">
                    <columns>
                        <Column><Text text="Material"/></Column>
                        <Column><Text text="Stock"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{name}"/>
                                <Text text="{amountInStock}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Input id="orderAmountInput" placeholder="Amount" type="Number"/>
            </VBox>
        </content>
        <footer>
            <Toolbar id="_IDGenToolbar1">
                <content>
                    <ToolbarSpacer id="_IDGenToolbarSpacer4" />
                    <Button id="_IDGenButton3" type="Accept" text="Save" press="saveOrder" />
                    <Button id="_IDGenButton4" text="Reject" type="Reject" press="closeDialog" ariaHasPopup="Dialog" />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
